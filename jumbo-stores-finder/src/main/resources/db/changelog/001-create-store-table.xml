<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="1" author="system">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="1">
                SELECT 1 FROM information_schema.schemata WHERE schema_name = 'public'
            </sqlCheck>
        </preConditions>
        <sql>CREATE EXTENSION IF NOT EXISTS postgis;</sql>
    </changeSet>

    <changeSet id="2" author="system">
        <createTable tableName="store">
            <column name="id" type="BIGSERIAL" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="address_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="location" type="GEOMETRY(Point,4326)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog> 